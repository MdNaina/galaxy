    
<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size : self.size
    Label:
        font_size: dp(70)
        font_name: './fonts/Sackers-Gothic-Std-Light.ttf'
        text: root.parent.menu_title
        pos_hint: { "center_x" : .5, "center_y" : .6 }

    Button:
        font_size: dp(40)
        font_name: './fonts/Eurostile.ttf'
        text: root.parent.menu_button_title
        pos_hint: { "center_x" : .5, "center_y" : .3 }
        size_hint: .2, .15
        background_normal: ""
        background_color: 1, .3, .3, 0
        canvas.before:
            Color:
                rgba: 1, .3, .3, 1
            RoundedRectangle:
                pos : self.pos
                size: self.size
                radius: [(20, 20)]
        on_press: root.parent.on_menu_button()

