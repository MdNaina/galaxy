#:import menu menu

MainWidget:


<MainWidget>:
    canvas.before:
        Rectangle:
            size: self.size
            source: './images/bg1.jpg'
    menu_widget : menu_widget
    perspective_x: int(self.width/2)
    perspective_y: int(self.height*0.75)

    MenuWidget:
        id: menu_widget

    Label:
        text: "Score: " + str(root.score)
        font_name: './fonts/Eurostile.ttf'
        font_size: dp(25)
        size_hint: .15, .15
        pos_hint: { "x": 0, "top": 1 }

    Label:
        text: "High Score: " + str(root.high_score)
        font_name: './fonts/Eurostile.ttf'
        font_size: dp(25)
        size_hint: .2, .15
        pos_hint: { "right": 1, "top": 1 }
